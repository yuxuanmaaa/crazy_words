/**prepare.wxss**/
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  background-color: #F5F5F5;
}

.prepare-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #1E88E5;
  margin-bottom: 50rpx;
}

.countdown {
  width: 200rpx;
  height: 200rpx;
  line-height: 200rpx;
  text-align: center;
  border-radius: 50%;
  background-color: #1E88E5;
  color: white;
  font-size: 100rpx;
  font-weight: bold;
  margin-bottom: 60rpx;
  animation: pulse 1s infinite;
}

@keyframes pulse {
  0% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.1);
  }
  100% {
    transform: scale(1);
  }
}

.game-info {
  width: 80%;
  background-color: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 4rpx 10rpx rgba(0,0,0,0.1);
}

.info-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
}

.info-label {
  color: #666;
  font-size: 28rpx;
}

.info-value {
  color: #1E88E5;
  font-size: 28rpx;
  font-weight: bold;
}

.tip {
  width: 80%;
  padding: 20rpx;
  background-color: #FFC107;
  color: #333;
  border-radius: 10rpx;
  text-align: center;
  font-size: 26rpx;
  margin-bottom: 40rpx;
}

.controls-tip {
  display: flex;
  width: 80%;
  justify-content: space-around;
  margin-top: 20rpx;
}

.control-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.control-btn {
  width: 160rpx;
  height: 80rpx;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 10rpx rgba(0,0,0,0.2);
}

.control-btn.correct {
  background-color: #4CAF50;
}

.control-btn.skip {
  background-color: #F44336;
} 