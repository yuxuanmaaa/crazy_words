/**settings.wxss**/
.section {
  width: 80%;
  background-color: #FFFFFF;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 20rpx;
}

.section-content {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  color: #1E88E5;
}

.time-selector, .player-selector {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
}

.picker-box {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 10rpx 30rpx;
  background-color: #F5F5F5;
  border-radius: 10rpx;
}

.player-selector {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 60%;
  margin: 0 auto;
}

.player-control {
  width: 70rpx;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  background-color: #1E88E5;
  color: white;
  border-radius: 50%;
  font-size: 40rpx;
  font-weight: bold;
}

.player-count {
  font-size: 36rpx;
  color: #333333;
  width: 100rpx;
  text-align: center;
} 