/**app.wxss**/
page {
  height: 100vh;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  color: #333333;
  background-color: #F5F5F5;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  position: relative;
}

.title {
  font-size: 36px;
  font-weight: bold;
  margin-bottom: 30px;
  color: #1E88E5;
}

.btn {
  width: 80%;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  border-radius: 45rpx;
  margin: 20rpx 0;
  font-size: 32rpx;
  color: #FFFFFF;
}

.btn-primary {
  background-color: #1E88E5;
}

.btn-secondary {
  background-color: #FFC107;
}

.btn-success {
  background-color: #4CAF50;
}

.btn-danger {
  background-color: #F44336;
} 
